@model IEnumerable<CoffeShopSystem.ViewModels.OrderVM.OrderDetailsVM>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Order</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Table</th>
            <th>Created At</th>
            <th>Discount</th>
            <th>Total</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.TableName</td>
                <td>@order.CreatedAt.ToString("g")</td>
                <td>@order.Discount</td>
                <td>@order.Total</td>
                <td>
                    @if (order.Status == "Completed")
                    {
                        <span class="badge badge-pill bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge badge-pill bg-danger">Pending</span>
                    }

                </td>
                <td>
                     <form asp-action="ToggleStatus" asp-route-id="@order.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm @(order.Status == "Pending" ? "btn-success" : "btn-warning")">
                            @(order.Status == "Pending" ? "Mark Completed" : "Set Pending")
                        </button>
                    </form>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@order.Id">Details</a>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@order.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
