@model CoffeShopSystem.ViewModels.HomeVM

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">

    <!-- Revenue Section -->
    <div class="mb-5">
        <h4 class="mb-3 text-primary fw-semibold">💰 Revenue Overview</h4>
        <div class="row g-4">
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-success border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Today</h6>
                        <h4 class="fw-bold text-success">@Model.DailyRevenue</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-info border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Weekly</h6>
                        <h4 class="fw-bold text-info">@Model.WeeklyRevenue</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-primary border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Monthly</h6>
                        <h4 class="fw-bold text-primary">@Model.MonthlyRevenue</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-warning border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">6 Months</h6>
                        <h4 class="fw-bold text-warning">@Model.SixMonthRevenue</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-danger border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Yearly</h6>
                        <h4 class="fw-bold text-danger">@Model.YearlyRevenue</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-dark border-2 text-center bg-light">
                    <div class="card-body">
                        <h6 class="text-muted">Total</h6>
                        <h4 class="fw-bold text-dark">@Model.TotalRevenue</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Section -->
    <div class="mb-4">
        <h4 class="mb-3 text-secondary fw-semibold">🧾 Orders</h4>
        <div class="row g-4">
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-success border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Today Orders</h6>
                        <h4 class="fw-bold text-success">@Model.DailyOrders</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-info border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Weekly Orders</h6>
                        <h4 class="fw-bold text-info">@Model.WeeklyOrders</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-primary border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Monthly Orders</h6>
                        <h4 class="fw-bold text-primary">@Model.MonthlyOrders</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-warning border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">6 Months Orders</h6>
                        <h4 class="fw-bold text-warning">@Model.SixMonthOrders</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-danger border-2 text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Yearly Orders</h6>
                        <h4 class="fw-bold text-danger">@Model.YearlyOrders</h4>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card shadow-sm border-dark border-2 text-center bg-light">
                    <div class="card-body">
                        <h6 class="text-muted">Total Orders</h6>
                        <h4 class="fw-bold text-dark">@Model.TotalOrders</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🍰 Top Menus -->
    <div class="mt-4">
        <h5 class="mb-3">🍰 Top 5 Menu Items</h5>
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped table-responsive mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Rank</th>
                            <th>Menu Item</th>
                            <th>Quantity Sold</th>
                            <th>Total Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TopMenus != null && Model.TopMenus.Count > 0)
                        {
                            var rank = 1;
                            foreach (var m in Model.TopMenus)
                            {
                                <tr>
                                    <td>@rank</td>
                                    <td>@m.MenuName</td>
                                    <td>@m.QuantitySold</td>
                                    <td>@m.TotalRevenue</td>
                                </tr>
                                rank++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No menu data available for this year.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.16s ease-in-out;
    }

        .card:hover {
            transform: translateY(-4px);
        }
</style>
