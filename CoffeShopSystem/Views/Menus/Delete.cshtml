@model CoffeShopSystem.ViewModels.MenuVM

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle-fill text-danger"></i> Are you sure you want to delete this menu?</h4>
        <p class="mt-4">Item: @Model.Item</p>
        <p>Price: @Model.Price AFN</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</button>
        <a class="btn btn-sm btn-success mx-3" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Cancel</a>
    </form>
</div>
